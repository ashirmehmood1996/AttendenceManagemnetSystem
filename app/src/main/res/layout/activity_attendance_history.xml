<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activities.AttendanceHistoryActivity">

    <Spinner
        android:id="@+id/sp_attendance_history_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_attendance_history_date_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="please sleect the date" />

        <Button
            android:id="@+id/bt_attendance_history_pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pick date" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_attendance_history_display_attendence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="display attendence" />

    <TableLayout
        android:id="@+id/tl_attendance_history"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e0e0e0"
        android:elevation="8dp">

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight=".4"
                android:background="#ffffff"
                android:padding="2dp"
                android:text="roll #"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="2dp"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight=".6"
                android:background="#ffffff"
                android:padding="2dp"
                android:text="status"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


</LinearLayout>